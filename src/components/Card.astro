---
interface Props {
  name: string
  description: string
  image: string
  author: string
  price: number
}



const { name, description, image, author, price } = Astro.props
---

<article class="w-full max-w-sm grid grid-flow-col gap-5 items-start justify-between border border-neutral-800 p-2 md:p-4 mx-auto md:mx-0">
  <img src={image} alt={name} class="w-36 h-full md:w-44 m-auto" >
  <div>
    <h2 class="text-white font-medium text-lg md:text-xl">
      {name}
    </h2>
    <p class="text-neutral-400 my-1 md:my-2 md:text-lg">
      {description}
    </p>
    <p class="font-semibold bg-gradient-to-bl from-cyan-500 to-blue-500 bg-clip-text text-transparent md:text-lg">
      {author}
    </p>
    <p class="text-white font-semibold text-lg md:text-xl">
      $ {price}
    </p>
  </div>
</article>