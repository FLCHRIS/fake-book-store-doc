---
interface ITableItem {
  key: string;
  type: string;
  description: string;
}

interface Props {
  title: string;
  id: string;
  tableItems: ITableItem[];
}

const { title, tableItems, id } = Astro.props as Props;
---

<div class="mt-10">
  <h3 class="text-white font-medium text-xl" id={id}>{title}</h3>
  <table class="w-full text-sm text-left rtl:text-right text-gray-500 mt-3">
    <thead class="text-white border-b border-neutral-800">
      <tr>
        <th scope="col" class="py-3">Key</th>
        <th scope="col" class="py-3">Type</th>
        <th scope="col" class="py-3">Description</th>
      </tr>
    </thead>
    <tbody>
      {
        tableItems.map((item) => (
          <tr class="border-b border-neutral-800">
            <th scope="row" class="py-4 text-neutral-400">
              {item.key}
            </th>
            <td class="py-4 text-neutral-400">{item.type}</td>
            <td class="py-4 text-neutral-400">{item.description}</td>
          </tr>
        ))
      }
    </tbody>
  </table>
</div>
